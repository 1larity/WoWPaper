<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--  Active tab -->
    <item android:state_selected="true" android:state_focused="false" android:state_pressed="false" android:color="@color/silver" />
    <!--  Inactive tab -->
    <item android:state_selected="false" android:state_focused="false" android:state_pressed="false" android:color="@color/black" />
    <!--  Pressed tab -->
    <item  android:state_pressed="true" android:color="@color/white" />
    <!--  Selected tab (using d-pad) -->
    <item android:state_selected="true" android:state_focused="true" android:state_pressed="false" android:color="@color/purple" />
</selector>