<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.digitale.wowpaper.MainActivity$LeagueFragment">

    <!-- Event Line -->
    <TextView android:id="@+id/labelCompetition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/matchCompetition"
        android:textStyle="bold" />

    <TextView android:id="@+id/cCompetition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/competitionName"
        android:layout_alignBaseline="@+id/labelCompetition"
        android:layout_toRightOf="@+id/labelCompetition"
        android:layout_toEndOf="@+id/labelCompetition"
        android:paddingLeft="15dp" />

    <!-- Event Time -->

    <ListView
        android:id="@+id/leagueListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:overScrollMode="ifContentScrolls"
        android:paddingTop="20dp"
        android:layout_centerHorizontal="true"
        android:paddingBottom="?attr/actionBarSize"
        android:layout_below="@+id/labelCompetition" />

</RelativeLayout>
